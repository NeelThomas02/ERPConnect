@model IEnumerable<ERPConnect.Models.InventoryItem>

<h1>Inventory List</h1>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Inventory/Create">Add New Inventory Item</a>
