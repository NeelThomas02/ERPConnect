@model IEnumerable<ERPConnect.Models.Product>

<h1>Products</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Product</a>

<table class="table">
  <thead>
    <tr><th>ID</th><th>Name</th><th>Price</th></tr>
  </thead>
  <tbody>
    @foreach(var p in Model) {
      <tr>
        <td>@p.ProductId</td>
        <td>@p.Name</td>
        <td>@p.Price.ToString("C")</td>
      </tr>
    }
  </tbody>
</table>
