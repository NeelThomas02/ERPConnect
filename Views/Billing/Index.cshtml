@model IEnumerable<ERPConnect.Models.Invoice>

<h1>Invoices</h1>

<table>
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.Customer?.Name</td>
                <td>@invoice.InvoiceDate.ToShortDateString()</td>
                <td>@invoice.TotalAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Billing/Create">Create New Invoice</a>
